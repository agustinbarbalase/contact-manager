{{#if message}}
  <div class="container mt-2 w-50">
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      {{message}}
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
  </div>
{{/if}}

{{#if success}}
  <div class="container mt-2 w-50">
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      {{success}}
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
  </div>
{{/if}}